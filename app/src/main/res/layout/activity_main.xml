<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="40dp"
    android:orientation="vertical"
    tools:context=".Controller.MainActivity">


    <ImageView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="400dp"
        android:layout_marginStart="15dp"
        android:layout_height="354dp"
        android:layout_marginTop="15dp"
        android:layout_weight="2"
        app:srcCompat="@drawable/titre" />

    <Button
        android:id="@+id/activity_main_play_btn1"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:background="#83A697"
        android:textColor="#FEFEFE"
        android:text="Commencer ?"
        />

    <Button
        android:id="@+id/activity_main_play_btn2"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:textColor="#FEFEFE"
        android:background="#568203"
        android:text="Liste des roles"
        />


    <Button
        android:id="@+id/activity_main_play_btn3"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="#1B4F08"
        android:textColor="#FEFEFE"
        android:text="RÃ¨gles"
        />



</LinearLayout>