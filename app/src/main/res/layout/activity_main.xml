<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="40dp"
    android:orientation="vertical"
    tools:context=".Controller.MainActivity" >

    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginTop="15dp"
        android:text="Magi World \n Qui sera le champion ?"
        android:textAlignment="center"
        android:textColor="#266197"
        android:layout_weight="1"
        android:textSize="22sp"
        android:gravity="center_horizontal" />


    <Button
        android:id="@+id/activity_main_play_btn1"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:background="#BBD2E1"
        android:textColor="#FEFEFE"
        android:text="Commencer ?"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/activity_main_play_btn2"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:textColor="#FEFEFE"
        android:background="#BF3030"
        android:text="Liste des roles"
        android:layout_weight="1"
        />


    <Button
        android:id="@+id/activity_main_play_btn3"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:background="#BBD2E1"
        android:textColor="#FEFEFE"
        android:text="RÃ¨gles"
        android:layout_weight="1"
        />



</LinearLayout>