<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    android:orientation="vertical"
    tools:context=".Controller.MainActivity" >


    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="354dp"
        android:layout_marginTop="15dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Magi World \n Qui sera le champion ?"
        android:textAlignment="center"
        android:textColor="#266197"
        android:textSize="22sp" />

    <Button
        android:id="@+id/activity_main_play_btn1"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="#BBD2E1"
        android:textColor="#FEFEFE"
        android:text="Commencer ?"
        />

    <Button
        android:id="@+id/activity_main_play_btn2"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:textColor="#FEFEFE"
        android:background="#BF3030"
        android:text="Liste des roles"
        />


    <Button
        android:id="@+id/activity_main_play_btn3"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="#BBD2E1"
        android:textColor="#FEFEFE"
        android:text="RÃ¨gles"
        />



</LinearLayout>